<core:FragmentDefinition xmlns="sap.m" 
    controllerName="restaurant.finalproject.controller.ProductList"
    xmlns:core="sap.ui.core">

        <Dialog title="{i18n>addProductsDialogTitle}" class="sapUiContentPadding">
            <content>                    
                <HBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
                    <Label text="{i18n>productName}" labelFor="product_name"/>
                    <Input id="product_name" placeholder="{i18n>productName}" value="{dialog>/name}" required="true"/>
                    <Label text="{i18n>productSupplier}" labelFor="product_supplier"/>
                    <Input id="product_supplier" placeholder="{i18n>productSupplier}" value="{dialog>/supplier}" required="true"/>
                    <Label text="{i18n>productType}" labelFor="product_type"/>
                    <Input id="product_type" 
                            placeholder="{i18n>productType}"
                            showSuggestion="true"
                            suggest=".onSuggest"
                            suggestionItems="{productTypes>/}"
                            value="{dialog>/type}"
                            required="true">
                        <suggestionItems>  
                            <core:Item text="{productTypes>type}"/>
                        </suggestionItems>
                    </Input>
                </HBox>
                <HBox>
                    <Label text="{i18n>productPriceKg}" labelFor="product_price"/>
                    <Input id="product_price" type="Number" placeholder="{i18n>productPriceKg}" value="{dialog>/price_kg}" required="true"/>
                    <Label text="{i18n>productQuantity}" labelFor="product_quant"/>
                    <Input id="product_quant" type="Number" placeholder="{i18n>productQuantity}" value="{dialog>/quantity}" required="true"/>
                </HBox>
                <HBox>
                    <Label text="{i18n>productImageUrl}" labelFor="product_image"/>
                    <Input id="product_image" type="Url" placeholder="{i18n>productImageUrl}" value="{dialog>/image}" required="true"/>
                    <Label text="{i18n>productCaducity}" labelFor="product_cad"/>
                    <DatePicker id="product_cad" value="{dialog>/caducity}" displayFormat="MM/dd/yyyy" required="true"/>
                </HBox>
            </content>
            <beginButton>
                <Button width="12rem" text="{i18n>cancelPopoverButton}" type="Emphasized" press="closeAddProductsDialog"/>
            </beginButton>
            <endButton>
                <Button width="12rem" text="{i18n>addProductPopoverButton}" type="Emphasized" press="addProduct"/>
            </endButton>
                      
        </Dialog>

</core:FragmentDefinition>