<core:FragmentDefinition xmlns="sap.m" 
    controllerName="restaurant.finalproject.controller.ProductList"
    xmlns:core="sap.ui.core">
        <Popover title="addProduct" placement="Bottom" initialFocus="">
            <content>
                <VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
                    <items>
                        <Input id="uid" placeholder="{i18n>productName}"/>
                        <Input id="pasw" placeholder="{i18n>productQuantity}"/>
                        <Input id="pasw" placeholder="{i18n>productBranch}"/>
                        <Input id="pasw" placeholder="{i18n>productUnit}"/>
                        <Input id="pasw" placeholder="{i18n>productCaducity}"/>
                        <Input id="pasw" placeholder="{i18n>productType}"/>
                        <Button width="12rem" text="{i18n>submitButton}" type="Emphasized" press="onLoginTap"></Button>
                    </items>
                </VBox>
            </content>
        </Popover>
</core:FragmentDefinition>