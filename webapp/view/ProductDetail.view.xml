<mvc:View
    controllerName="restaurant.finalproject.controller.ProductDetail"
	xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    displayBlock="true"
    xmlns="sap.m"
>
		<App>

           <ObjectHeader
                id="detailObjHeader"
                responsive="true"
				title="{productDetail>/name}"
				number="{productDetail>/price-kg}"
                icon="{productDetail>/image}"
                iconDensityAware="false"
                iconAlt="{productDetail>/name}">
				<attributes>
					<ObjectAttribute title="{i18n>productCaducity}" text="{path: 'productDetail>/caducity', 
                                                                            formatter:'restaurant.finalproject.util.Formatter.setDate'}"/>
					<ObjectAttribute title="{i18n>productType}" text="{productDetail>/type}"/>
				</attributes>

                <headerContainer>
                    <IconTabBar id="idIconTabBar">
				        <items>
					        <IconTabFilter
						        key="supplier"
						        text="{i18n>iconTabFilterSupplier}"
						        icon="sap-icon://supplier">
						            <Text text="supplier info"/>
					        </IconTabFilter>
					        <IconTabFilter
						        key="category"
						        text="{i18n>iconTabFilterCategory}"
						        icon="sap-icon://hint">
						            <Text text="category info"/>
					        </IconTabFilter>
				        </items>
			        </IconTabBar>
                </headerContainer>

			</ObjectHeader>
           
        </App>

</mvc:View>