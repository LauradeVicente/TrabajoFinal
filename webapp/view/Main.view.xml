<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="restaurant.finalproject.controller.Main">
    <App class="mainViewStyles">
        <Page showHeader="false" class="mainPage">
            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout tileStyles" 
                        header="{i18n>tileHeader}"
		                subheader="{i18n>tileSubheader}" 
                        press="navToProductList">
		        <TileContent>
			        <ImageContent src="images/sap_logo.png" />
		        </TileContent>
	        </GenericTile>
            <footer>
		        <Bar>
        	        <contentLeft>
            	        <Text text="{i18n>footerTitle}"/>
          	        </contentLeft>
          	        <contentRight>
            	        <Text text="{i18n>footerMain}"/>
          	        </contentRight>
		        </Bar>
            </footer>
        </Page>
    </App>
</mvc:View>