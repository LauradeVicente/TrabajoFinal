<mvc:View
    controllerName="restaurant.finalproject.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>

  <App>
    <Page title="{i18n>title}">
      <content>
        <VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
          <items>
            <Input id="uid" placeholder="{i18n>userInput}"></Input>
            <Input id="pasw" placeholder="{i18n>passwordInput}" type="Password"></Input>
            <Button width="12rem" text="{i18n>submitButton}" type="Emphasized" press="onLoginTap"></Button>
          </items>
        </VBox>
      </content>
      <footer >
        <Bar>
          <contentLeft>
            <Text text="{i18n>footerTitle}"></Text>
          </contentLeft>
          <contentRight>
            <Text text="{i18n>footerLogin}"></Text>
          </contentRight>
        </Bar>
      </footer>
    </Page>
  </App>
       
</mvc:View>